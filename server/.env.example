# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/book-marketplace
# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bookmarket

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-min-32-characters
JWT_EXPIRES_IN=7d

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google Gemini API for AI Recommendations (Get from Google AI Studio)
GEMINI_API_KEY=your-gemini-api-key-here

# Frontend URL (for CORS in production)
FRONTEND_URL=https://your-app.onrender.com